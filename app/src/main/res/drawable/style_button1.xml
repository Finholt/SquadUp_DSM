<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#4D4D4D" />
            <gradient android:angle="-90" android:startColor="@color/pressed_button" android:endColor="@color/pressed_button"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#4D4D4D" />
            <solid android:color="#4D4D4D"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#4D4D4D" />
            <gradient android:angle="-90" android:startColor="@color/unpressed_button" android:endColor="@color/unpressed_button" />
        </shape>
    </item>
</selector>